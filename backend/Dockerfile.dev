# Development Dockerfile for backend with hot-reload
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies for pandas/xml
RUN apt-get update && apt-get install -y libxml2-dev libxslt-dev gcc && rm -rf /var/lib/apt/lists/*

# Copy requirements and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Create a directory for the database
RUN mkdir -p /data

# Expose the port
EXPOSE 8000

# Run uvicorn with reload enabled for development
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

